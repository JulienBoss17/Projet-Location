<style>

nav {
    z-index: 1000; 
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #e6e6e6;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.288); 
    border-bottom: 1px solid #E8D8C3; 
}

    nav ul {
        position: fixed;
        width: 100%;
        list-style-type: none;
        padding: 0;
        overflow: hidden;
        background-color: #e6e6e6;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.288); 
        border-bottom: 1px solid #E8D8C3; 
    }

    nav li {
        float: left;
    }

    nav li:last-child {
        float: right;
    }

    nav li a {
        display: block;
        text-align: center;
        padding: 14px 8px;
        text-decoration: none;
    }

    nav li a:hover {
        background-color: #F5F5F5;
    }

    .dropdown {
        float: left;
        overflow: hidden;
    }

    .dropdown .dropbtn {
        font-size: 16px;
        border: none;
        outline: none;
        color: #2C2C2C; 
        padding: 14px 16px;
        background-color: inherit;
        font-family: inherit;
        margin: 0;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #e6e6e6;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        position: fixed;
    }

    .dropdown-content a {
        float: none;
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
    }

    .dropdown-content a:hover {
        background-color: #F5F5F5;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #F5F5F5;
    }

    .nav-fade {
  position: fixed;
  left: 0;
  width: 100%;
  height: 100px; 
  background: linear-gradient(rgba(0, 0, 0, 0.717), rgba(254, 218, 174, 0));
  z-index: 999; 
  pointer-events: none; 
}
</style>

<nav>
    <ul>
        <li><a href="/">Accueil</a></li>
        <li class="dropdown">
            <a href="" class="dropbtn">La Maison</a>
            <div class="dropdown-content">
                <a href="/presentation">Présentation</a>
                <a href="/localisation">Localisation</a>
            </div>
        </li>
        <li class="dropdown">
            <a href="/contact" class="dropbtn">Contact</a>
            <div class="dropdown-content">
                <a href="/contact">Nous Contacter</a>
                <% if(user) { %>
                    <a href="/depotdossier">Je dépose mon dossier</a>
                <% } else { %>
                    <a href="/compte">Je dépose mon dossier</a>
                <% } %>
            </div>
        </li>
        <% if(user) { %>
            <li class="dropdown">
                <% if(user.role === "admin") { %>
                    <a href="/dashboardadmin" class="dropbtn">Tableau de bord</a>
                    <div class="dropdown-content">
                        <a href="/dashboardadmin">Tableau de bord</a>
                    </div>
                <% } else if (user.role === "locataire") { %>
                    <a href="/dashboardlocataire" class="dropbtn">Tableau de bord</a>
                    <div class="dropdown-content">
                        <a href="/dashboardlocataire">Tableau de bord</a>
                    </div>
                <% } %>
            </li>
            <li><a href="/compte">Mon compte</a></li>
        <% } else { %>
            <li><a href="/compte">S'authentifier</a></li>
        <% } %>
    </ul>
    
</nav>